{
    "include": [
        "env.d.ts",
        "resources/scripts/**/*",
        "resources/scripts/**/*.vue",
        "resources/scripts/**/*.json"
    ],
    "exclude": [
        "resources/scripts/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "lib": [
            "es2015"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./resources/scripts/*"
            ]
        },
      "allowSyntheticDefaultImports": true
    }
}
